<div class="card">
  <div class="card-header">
    <h2 class="card-title">Editar Produto de Contingência</h2>
    <p class="card-subtitle">
      Atualize as informações do produto: <%= @contingencia_produto.cod_pro %>
    </p>
  </div>

  <div class="form-container">
    <%= form_with model: @contingencia_produto, url: contingencia_produto_path(@contingencia_produto), method: :patch, local: true, class: "form" do |form| %>
      <% if @contingencia_produto.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@contingencia_produto.errors.count, "erro") %> impediram que o produto fosse atualizado:</h4>
          <ul>
            <% @contingencia_produto.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :cod_pro, "Código do Produto", class: "form-label" %>
          <%= form.text_field :cod_pro, class: "form-input", placeholder: "Digite o código do produto" %>
        </div>

        <div class="form-group">
          <%= form.label :uni_med, "Unidade de Medida", class: "form-label" %>
          <%= form.select :uni_med, 
                options_from_collection_for_select(@unity_measurements, :uni_med, :des_med, @contingencia_produto.uni_med),
                { prompt: "Selecione uma unidade" },
                { class: "form-select" } %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group full-width">
          <%= form.label :des_pro, "Descrição do Produto", class: "form-label" %>
          <%= form.text_area :des_pro, class: "form-textarea", placeholder: "Digite a descrição do produto", rows: 3 %>
        </div>
      </div>

      <div class="form-actions">
        <%= form.submit "Atualizar Produto", class: "btn btn-primary" %>
        <%= link_to "Cancelar", contingencia_produto_path(@contingencia_produto), class: "btn btn-secondary" %>
        <%= link_to "Voltar à Lista", contingencia_produtos_path, class: "btn btn-outline" %>
      </div>
    <% end %>
  </div>
</div>